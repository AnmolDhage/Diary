<% posts.forEach(function(element) { %>
  <div class="">
    <h1><%= element.title %></h1>
    <p><% if (element.content.length > 90) { %>
        <%= element.content.substr(0, 90) + " ..."%>
      <%  } else { %>
        <%= element.content%>
      <%  } %>
      <a href="/post/<%= element._id %>">Read More</a>
    </p>
  </div>
<% }); %>

